pipeline {

     stages  {
           stage ("compile stage"){
           steps{
                 withMaven (maven :'Maven_3.3.9'){
                 sh 'mvn clean compile'
                 }
               }
               
           stage ("Testing stage"){
               withMaven (maven :'Maven_3.3.9'){
                 sh 'mvn test '
                 }
               }
           
            stage ("Deployment stage"){
               withMaven (maven :'Maven_3.3.9'){
                 sh 'mvn deploy '
                 }
               }
             }
          }
}